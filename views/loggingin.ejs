<%- include("templates/header") %>

<body class="text-center">
  <main class="form-signin">
    <form action="/loggingin" method="post" style="max-width: 330px; margin: 0 auto;">
      <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
      <div class="form-floating mb-3">
        <input name="email" type="text" class="form-control" id="floatingInput" placeholder="name@example.com" value="<%= email %>">
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating mb-3">
        <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
      </div>
      <% if (error) { %>
        <p style="color: red">Invalid email address</p>
      <% } else if (incorrect) { %>
        <p style="color: red">Password is incorrect</p>
      <% } %>
      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
      <p class="mt-5 mb-3 text-muted">Â© 2023</p>
    </form>
  </main>
</body>

